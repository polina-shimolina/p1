<Window x:Class="p1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p1"
        mc:Ignorable="d"
        Title="MainWindow" Height="680.025" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="grey" ImageSource="lightgrey.png" />
        <ImageBrush x:Key="black" ImageSource="black.png" />
    </Window.Resources>
    <Grid Margin="0,0,-0.4,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="133*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="7" Grid.Row="0">
            <MenuItem Header="Item1"></MenuItem>
            <MenuItem Header="Item2"></MenuItem>
        </Menu>
        <Image Grid.Column="0" Grid.Row="1" Source="black.png" Width="84" Height="132"/>
        <Image Grid.Column="1" Grid.Row="1" Source="grey.png" Width="84" Height="132"/>
        <Image Grid.Column="3" Grid.Row="1" Source="grey.png" Width="84" Height="132"/>
        <Image Grid.Column="4" Grid.Row="1" Source="grey.png" Width="84" Height="132"/>
        <Image Grid.Column="5" Grid.Row="1" Source="grey.png" Width="84" Height="132"/>
        <Image Grid.Column="6" Grid.Row="1" Source="grey.png" Width="84" Height="132"/>
        <Image Grid.Column="6" Grid.Row="1" Source="grey.png" Width="84" Height="132"/>
        <Button Background ="{StaticResource grey}" Grid.Column="0" Grid.Row="2" Width="84" Height="132" />
        <Button Background ="{StaticResource black}" Grid.Column="1" Grid.Row="2" Width="84" Height="132" />
        <Button Background ="{StaticResource grey}" Grid.Column="1" Grid.Row="2" Width="84" Height="132" />
        <Button Background ="{StaticResource black}" Grid.Column="2" Grid.Row="2" Width="84" Height="132" Margin="14.8,45.4,14.8,0" VerticalAlignment="Top"/>
        <Button Background ="{StaticResource black}" Grid.Column="2" Grid.Row="2" Width="84" Height="132" Margin="14.8,65.4,14.8,0" VerticalAlignment="Top"/>
        <Button Background ="{StaticResource grey}" Grid.Column="2" Grid.Row="2" Width="84" Height="132" Margin="14.8,88.4,14.8,0" VerticalAlignment="Top"/>
        <Button Background ="{StaticResource black}" Grid.Column="3" Grid.Row="2" Width="84" Height="132" />
        <Button Background ="{StaticResource black}" Grid.Column="3" Grid.Row="2" Width="84" Height="132" />
        <Button Background ="{StaticResource black}" Grid.Column="3" Grid.Row="2" Width="84" Height="132" />
        <Button Grid.Column="3" Grid.Row="2" Width="84" Height="132" >
            <Button.Background>
                <ImageBrush ImageSource="lightgrey.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
